@{
    Layout = "";
}

@inject ServerDataBuilder ServerDataBuilder;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Taggl</title>

    @*TODO: Import site.less file in development*@
    <link rel="stylesheet" href="~/assets/css/site.css" />
    <link rel="stylesheet" href="~/jspm_packages/npm/font-awesome@4.5.0/css/font-awesome.min.css" />

    <style>
        body {
            font-size: 16px;
            line-height: normal;
        }
        h1, h2, h3, h4, h5 {
            color: #4BB5CF;
            text-transform: uppercase;
        }
        h1, h2 {
            font-weight: bold;
        }
        h3 {
            font-size: 16px;
            margin: 0px;
        }

        .navbar-default .navbar-nav > li > a > h3 {
            color: white;
        }
        .navbar-default .navbar-nav > li > a > h3:hover,
        .navbar-default .navbar-nav > li > a > h3:focus {
            color: #4BB5CF;
        }

        .btn-info {
            color: #fff;
            background-color: #4BB5CF;
            border-color: transparent;
        }
        .btn-info:focus,
        .btn-info.focus {
            color: #fff;
            background-color: #21829B;
            border-color: rgba(0, 0, 0, 0);
        }
        .btn-info:hover {
            color: #fff;
            background-color: #21829B;
            border-color: rgba(0, 0, 0, 0);
        }
        .btn-info:active,
        .btn-info.active,
        .open > .dropdown-toggle.btn-info {
            color: #fff;
            background-color: #21829B;
            border-color: rgba(0, 0, 0, 0);
        }
        .btn-info:active:hover,
        .btn-info.active:hover,
        .open > .dropdown-toggle.btn-info:hover,
        .btn-info:active:focus,
        .btn-info.active:focus,
        .open > .dropdown-toggle.btn-info:focus,
        .btn-info:active.focus,
        .btn-info.active.focus,
        .open > .dropdown-toggle.btn-info.focus {
            color: #fff;
            background-color: #21829B;
            border-color: rgba(0, 0, 0, 0);
        }
        .btn-info:active,
        .btn-info.active,
        .open > .dropdown-toggle.btn-info {
            background-image: none;
        }
        .btn-info.disabled:hover,
        .btn-info[disabled]:hover,
        fieldset[disabled] .btn-info:hover,
        .btn-info.disabled:focus,
        .btn-info[disabled]:focus,
        fieldset[disabled] .btn-info:focus,
        .btn-info.disabled.focus,
        .btn-info[disabled].focus,
        fieldset[disabled] .btn-info.focus {
            background-color: #4BB5CF;
            border-color: transparent;
        }
        .btn-info .badge {
            color: #4BB5CF;
            background-color: #fff;
        }
        .btn-info {
            background-color: #4BB5CF;
        }

        .btn {
            font-size: 16px;
        }

        .mt-none {
            margin-top: 0px;
        }
        .mt-xs {
            margin-top: 10px;
        }
        .mt-sm {
            margin-top: 20px;
        }

        .mr {
            margin-right: 15px;
        }

        .ml-none {
            margin-left: 0px;
        }
        .ml-xs {
            margin-left: 10px;
        }
        .ml-sm {
            margin-left: 20px;
        }

        .mb-none {
            margin-bottom: 0px;
        }
        .mb-xs {
            margin-bottom: 10px;
        }
        .mb-sm {
            margin-bottom: 20px;
        }
        .mb-md {
            margin-bottom: 30px;
        }
        .mb-lg {
            margin-bottom: 40px;
        }

        label {
            margin: 0px;
            font-weight: bold;
        }

        div.false-input-text {
            /*box-shadow: inset 0 -1px 0 #ddd;*/
            padding-top: 5px;
            padding-bottom:  3px;
        }

        textarea.ng-invalid.ng-touched,
        textarea.form-control.ng-invalid.ng-touched,
        input.form-control.ng-invalid.ng-touched,
        input[type=text].ng-invalid.ng-touched, 
        input[type=password],
        input[type=email],
        input[type=number],
        [type=text].form-control.ng-invalid.ng-touched,
        [type=password].form-control,
        [type=email].form-control,
        [type=tel].form-control,
        [contenteditable].form-control {
            box-shadow: inset 0 -2px 0 red;
        }

        .clickable {
            cursor: pointer;
        }

        .text-striked {
            text-decoration: line-through;
        }

        .navbar-brand {
            position: absolute;
            width: 100%;
            left: 0;
            text-align: center;
            margin:0 auto;
            padding: 10px;
        }

        
    </style>
</head>
<body ng-controller="MainController as ctrl" style="background-color: #FAFAFA;">
    <tgl-navbar></tgl-navbar>

    <div class="container" style="margin-top: 63px;">
        <ui-view></ui-view>
    </div>
    
    <script src="~/jspm_packages/system.js"></script>
    <script src="~/jspm.browser.js"></script>
    <script src="~/jspm.config.js"></script>
    <script src="~/jspm_packages/npm/moment@2.12.0/moment.js" asp-append-version="true"></script>
    <script type="text/javascript">
        System.import("/src/apps/main/main.js").then(function (m) {
            m.run(@(await ServerDataBuilder
                .AddCurrentUser()
                .AddUrls(typeof(HomeController))
                .AddUrls(typeof(AccountApiController))
                .AddUrls(typeof(AdministrationApiController))
                .AddUrls(typeof(SearchApiController))
                .AddUrls(typeof(ProfessionalityApiController))
                .AddUrls(typeof(ExpertiseApiController))
                .AddUrls(typeof(ShiftScheduleApiController))
                .SerializeAsync()));
        });
    </script>
</body>
</html>