@model RegisterViewModel

<div>
    <div class="header-wrapper text-center">
        <h1 class="header">Register for an account</h1>
        <a asp-controller="Login" asp-action="Account">Got an account? Login here!</a>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <section>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean fringilla ipsum et nisl sollicitudin, at molestie odio tempus. Donec molestie aliquet velit ac pulvinar. Ut congue metus a nulla pulvinar, ac facilisis enim pretium. Maecenas finibus fermentum sollicitudin.</p>
                <form method="post" class="form-horizontal clearfix" role="form" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

                    <div class="row">
                        <div class="col-sm-12">
                            <h4>Please fill in the form to create new account</h4>
                        </div>
                        <div class="col-sm-12">
                            <div>
                                <label asp-for="Email" class="control-label"></label><required-asterick />
                                <div>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div>
                                <label asp-for="Password" class="control-label"></label><required-asterick />
                                <div>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row form-buttons-row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success">Register</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Styles {
    <style type="text/css">
        .header-wrapper {
            margin-bottom: 40px;
        }

        .header-wrapper > h1 {
            margin-bottom: 0px;
        }

        .header-wrapper > a {
            font-size: 10px;
            margin-left: 3px;
        }

        .form-buttons-row {
            margin-top: 15px;
        }
    </style>
}
