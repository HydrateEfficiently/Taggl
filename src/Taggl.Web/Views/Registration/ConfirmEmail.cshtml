@{
    var loginPage = Url.Action("Login", "Account");
    var timeUntilRedirect = 3;
}

<div class="text-center">
    <h1>Email address confirmed!</h1>
    <h3>Redirecting you in <span id="redirectionTimer">3</span> seconds.</h3>
    <p>Or click <a href="@loginPage">here</a></p>
</div>

@section Scripts {
    <script type="text/javascript">
        var timeUntilRedirect = @timeUntilRedirect;
        var timerEl = document.getElementById("redirectionTimer");
        setInterval(function () {
            if (timeUntilRedirect > 0) {
                timeUntilRedirect--;
                timerEl.innerText = timeUntilRedirect;
            } else if (timeUntilRedirect === 0) {
                window.location = "@loginPage";
            }
        }, 1000);
    </script>
}